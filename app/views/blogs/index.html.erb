<div class="row">
  <div class="col-sm-6 col-md-4 innerLR">
    <%= link_to 'ブログ記事を新規登録する', new_blog_path, :class => "btn btn-lg btn-block btn-primary" %><br />
    <% @blogs.each do |blog| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= blog.title %></h3>
        </div>
        <div class="panel-body">
          <%= blog.content %><br />
          <em><%= blog.created_at %></em>
          <p><%= image_tag(blog.user.image_path, :size => "50x50", :alt => "アイコン", :class=>["img-rounded"]) %></p>
          <p><em>投稿者:<%= blog.user.name %></em></p>
          <p><% if blog.user_id === @user.id %><%= link_to '編集', edit_blog_path(blog) %><% end %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>